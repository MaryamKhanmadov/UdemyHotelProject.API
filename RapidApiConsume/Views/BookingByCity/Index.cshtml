@model List<BookingApiViewModel.Hotel>
@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />

    @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
    {
        <label>Enter city name</label>
        <input type="text" class="form-control" name="cityID" />
        <br />
        <button class="btn btn-primary">Show Hotel List</button>
    }
    
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Hotel Name</th>
            <th>Hotel ViewCount</th>
            <th>Hotel Detail</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.property.name</td>
                <td>@item.property.reviewScore</td>
                <td><a href="#" class="btn btn-outline-dark">Detail</a></td>
            </tr>
        }
    </table>
</div>