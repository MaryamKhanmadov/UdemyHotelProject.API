@model List<BookingApiSearchLocationViewModel.Datum>
@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br />

    @using(Html.BeginForm("Index","SearchLocationID",FormMethod.Post))
    {
        <label>Enter city name</label>
        <input type="text" class="form-control" name="cityName"/>
        <br />
        <button class="btn btn-primary">Find City ID</button>
    }
    <br />
    <table class="table table-bordered">
        <tr>
            <th>Location</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@item.dest_id</td>
            </tr>
        }
    </table>
    <br />
    <a href="/BookingByCity/Index/" class="btn btn-dark">New Hotel Reservation Info</a>
</div>