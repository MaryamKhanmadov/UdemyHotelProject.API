@model AddStaffViewModel
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Staff Name</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Name">
        </div>
        <div class="form-group col-md-6">
            <label>Staff Title</label>
            <input type="text" asp-for="Title" class="form-control" placeholder="Title">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Staff Link 1</label>
            <input type="text" class="form-control" asp-for="SocialMedia1" placeholder="SocialMedia">
        </div>
        <div class="form-group col-md-6">
            <label>Staff Link 2</label>
            <input type="text" class="form-control" asp-for="SocialMedia2" placeholder="SocialMedia">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Staff Link 3</label>
            <input type="text" class="form-control" asp-for="SocialMedia3" placeholder="SocialMedia">
        </div>
        <div class="form-group col-md-6">
            <label>Staff Image</label>
            <input type="text" class="form-control" asp-for="Image" placeholder="Image">
        </div>
    </div>

    <button class="btn btn-primary">Add New Person</button>
    <button asp-action="Index" class="btn btn-outline-warning">Back to List</button>
</form>